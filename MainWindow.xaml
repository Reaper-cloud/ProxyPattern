<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proxy Pattern Example" Height="200" Width="400">
    <Grid>
        <Label Content="Введите запрос:" Margin="10" />
        <TextBox x:Name="RequestTextBox" Margin="10,30,10,0" Height="25" VerticalAlignment="Top" />
        <Button Content="Отправить запрос" Margin="10,70,10,0" Height="30" VerticalAlignment="Top" Click="OnRequestButtonClick"/>
        <TextBlock x:Name="ResultTextBlock" Margin="10,110,10,0" TextWrapping="Wrap" VerticalAlignment="Top" />
    </Grid>
</Window>
